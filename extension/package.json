{
  "name": "@ok200/extension",
  "version": "0.1.0",
  "description": "200 OK Web Server Chrome Extension",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:extension dev:web",
    "dev:extension": "vite build --watch",
    "dev:web": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@ok200/engine": "workspace:*",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7",
    "vite": "^6",
    "vitest": "^3"
  }
}

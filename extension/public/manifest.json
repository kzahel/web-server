{
  "manifest_version": 3,
  "name": "200 OK Web Server",
  "version": "0.1.0",
  "description": "Lightweight web server for local development. Serve any folder over HTTP.",
  "permissions": ["nativeMessaging", "storage"],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "action": {},
  "icons": {
    "16": "icons/ok-16.png",
    "32": "icons/ok-32.png",
    "128": "icons/ok-128.png"
  },
  "externally_connectable": {
    "matches": ["https://ok200.app/*", "http://local.ok200.app/*"]
  }
}

{
  "manifest_version": 3,
  "name": "200 OK - Web Server",
  "version": "0.1.0",
  "description": "Serve any folder over HTTP. Companion extension for the 200 OK desktop app â€” the successor to Web Server for Chrome.",
  "permissions": ["nativeMessaging", "storage"],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/ui/app.html",
    "default_title": "200 OK - Web Server"
  },
  "icons": {
    "16": "icons/ok-16.png",
    "32": "icons/ok-32.png",
    "48": "icons/ok-48.png",
    "128": "icons/ok-128.png"
  },
  "externally_connectable": {
    "matches": ["https://ok200.app/*", "http://local.ok200.app/*"]
  }
}

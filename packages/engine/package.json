{
  "name": "@ok200/engine",
  "version": "0.0.1",
  "description": "Cross-platform web server engine â€” TypeScript core with platform adapters",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./presets/node": {
      "types": "./dist/presets/node.d.ts",
      "import": "./dist/presets/node.js"
    },
    "./presets/native": {
      "types": "./dist/presets/native.d.ts",
      "import": "./dist/presets/native.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "bundle:native": "esbuild src/native-entry.ts --bundle --format=esm --outfile=dist/engine.native.js --platform=neutral --target=es2020",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
